@{
  Layout = "Views/Shared/_Layout.cshtml"
}

<h1>@Model["stylist"].GetFirstName() @Model["stylist"].GetLastName()</h1>

<h2>Add Client</h2>
<form action="/clients/@Model["stylist"].GetId()" method="post">
  <label for="new-client-first">First Name</label>
  <input type="text" name="new-client-first">

  <label for="new-client-last">Last Name</label>
  <input type="text" name="new-client-last">

  <input  type="hidden" name="new-client-stylist-id" value="@Model["stylist"].GetId()">

  <button type="submit" name="button">Add</button>
</form>

<h2>Current Clients</h2>

@if (Model["clients"].Count == 0)
{
  <h3>This stylist does not have any clients yet...</h3>
}
else
{
  <ol>
  @foreach(var client in Model["clients"])
  {
    <h3><li>@client.GetFirstName() @client.GetLastName() <a href="/client/edit/@client.GetId()">Edit/Delete</a></li></h3>
  }
  </ol>
}

<a href="/">All Stylists</a>
