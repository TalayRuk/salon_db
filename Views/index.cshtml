@{
  Layout = "Views/Shared/_Layout.cshtml";
}


<h2 class="underline">Add Stylist</h2>
<div class="container">
  <form action="/stylist/new" method="post">
    <label for="new-stylist-first">First Name</label>
    <input class="salon-input form-control" type="text" name="new-stylist-first">

    <label for="new-stylist-last">Last Name</label>
    <input class="salon-input form-control" type="text" name="new-stylist-last">

    <label for="new-stylist-expertise">Expertise</label>
    <input class="salon-input form-control" type="text" name="new-stylist-expertise">

    <button class="btn app-btn" type="submit" name="button">Add Stylist</button>
  </form>
</div>
  <h2 class="underline">Current Stylists</h2>
<div class="container">
  @if (Model.Count == 0)
  {
    <h3>Salon Aether does not have any stylists at this time.</h3>
  }
  else
  {
    foreach(var stylist in Model)
    {
      <h3>Name: @stylist.GetFirstName() @stylist.GetLastName()</h3>
      <div class="container">
        <h4>Expertise: @stylist.GetExpertise()</h4>
        <div class="link-container">
          <blockquote>
            > <a href="/clients/@stylist.GetId()">View @stylist.GetFirstName()'s Clients</a>
            <br>
            > <a href="/stylist/edit/@stylist.GetId()">Edit/Delete Stylist</a>
          </blockquote>
        </div>
      </div>
    }
  }
</div>
